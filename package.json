{
  "name": "stylelint-config-itgalaxy",
  "version": "53.0.0",
  "description": "A mostly reasonable approach to CSS and SCSS.",
  "repository": {
    "type": "git",
    "url": "https://github.com/itgalaxy/stylelint-config-itgalaxy.git"
  },
  "homepage": "https://github.com/itgalaxy/stylelint-config-itgalaxy",
  "keywords": [
    "style guide",
    "styleguide",
    "lint",
    "itgalaxy",
    "css",
    "scss",
    "stylelint",
    "stylelint-config"
  ],
  "author": "Itgalaxy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/itgalaxy/stylelint-config-itgalaxy/issues"
  },
  "files": [
    "lib",
    "css.js",
    "index.js",
    "scss.js"
  ],
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "babel-jest": "^24.7.1",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-ava": "^6.0.0",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-itgalaxy": "^100.0.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-lodash": "^5.1.0",
    "eslint-plugin-markdown": "^1.0.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-unicorn": "^8.0.2",
    "husky": "^1.0.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.0.5",
    "npm-run-all": "^4.0.0",
    "npmpub": "^4.0.1",
    "pify": "^4.0.0",
    "prettier": "^1.5.2",
    "remark-cli": "^6.0.1",
    "remark-preset-lint-itgalaxy": "^14.0.0",
    "stylelint": "^10.0.1",
    "stylelint-order": "^3.0.0",
    "stylelint-scss": "^3.6.0",
    "stylelint-find-rules": "^2.0.0"
  },
  "peerDependencies": {
    "stylelint": "^10.0.1",
    "stylelint-scss": "^3.6.0",
    "stylelint-order": "^3.0.0"
  },
  "scripts": {
    "lint:check-rules": "stylelint-find-rules --config lib/config/all.js",
    "lint:prettify": "prettier --list-different '{lib,__tests__}/**/*.{js,mjs,jsx,md}' '*.{js,mjs,jsx,md}'",
    "lint:md": "remark . -i .gitignore -f -q",
    "lint:js": "eslint . --cache --cache-location 'node_modules/.cache/eslint/.eslintcache' --report-unused-disable-directives --ignore-pattern '!.*' --ignore-path .gitignore --ext '.js,.mjs,.jsx'",
    "lint": "npm-run-all -l -p 'lint:**'",
    "prettify": "npm run lint:prettify -- --write",
    "fix:js": "npm run lint:js -- --fix",
    "fix": "npm-run-all -l prettify -p 'fix:**'",
    "pretest": "npm run lint",
    "test:only": "jest",
    "test": "npm run test:only",
    "release": "npmpub"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8.9"
          }
        }
      ]
    ]
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-itgalaxy"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "sort-keys": "off"
    },
    "extends": [
      "plugin:itgalaxy/node",
      "plugin:itgalaxy/esnext",
      "plugin:itgalaxy/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/__tests__/**/*.js"
        ],
        "parserOptions": {
          "sourceType": "module"
        },
        "rules": {
          "node/no-unsupported-features/es-syntax": "off"
        }
      }
    ],
    "root": true
  },
  "engines": {
    "node": ">= 8.9.0"
  }
}
