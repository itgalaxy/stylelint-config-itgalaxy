{
    "name": "stylelint-config-itgalaxy",
    "version": "35.0.0",
    "description": "A mostly reasonable approach to CSS and SCSS.",
    "repository": {
        "type": "git",
        "url": "https://github.com/itgalaxy/stylelint-config-itgalaxy.git"
    },
    "homepage": "https://github.com/itgalaxy/stylelint-config-itgalaxy",
    "keywords": [
        "style guide",
        "styleguide",
        "lint",
        "itgalaxy",
        "css",
        "scss",
        "stylelint",
        "stylelint-config"
    ],
    "author": "Itgalaxy",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/itgalaxy/stylelint-config-itgalaxy/issues"
    },
    "files": [
        "lib",
        "css.js",
        "index.js",
        "scss.js"
    ],
    "devDependencies": {
        "ava": "^0.21.0",
        "babel-cli": "^6.11.0",
        "babel-core": "^6.25.0",
        "babel-preset-es2015": "^6.13.0",
        "babel-preset-stage-0": "^6.5.0",
        "babel-register": "^6.9.0",
        "eslint": "^4.1.1",
        "eslint-plugin-ava": "^4.2.1",
        "eslint-plugin-import": "^2.6.0",
        "eslint-plugin-itgalaxy": "^50.0.0",
        "eslint-plugin-jest": "^20.0.3",
        "eslint-plugin-jsx-a11y": "^6.0.0",
        "eslint-plugin-lodash": "^2.4.3",
        "eslint-plugin-node": "^5.1.0",
        "eslint-plugin-prettier": "^2.1.2",
        "eslint-plugin-promise": "^3.5.0",
        "eslint-plugin-react": "^7.1.0",
        "eslint-plugin-unicorn": "^2.1.2",
        "husky": "^0.14.0",
        "lint-staged": "^4.0.0",
        "npm-run-all": "^4.0.0",
        "npmpub": "^3.1.0",
        "nyc": "^11.1.0",
        "pify": "^3.0.0",
        "prettier": "^1.5.2",
        "remark-cli": "^3.0.0",
        "remark-preset-lint-itgalaxy": "^6.0.0",
        "stylelint": "^8.0.0",
        "stylelint-order": "^0.6.0",
        "stylelint-scss": "^1.4.1"
    },
    "peerDependencies": {
        "stylelint": "^8.0.0",
        "stylelint-scss": "^1.4.1",
        "stylelint-order": "^0.6.0"
    },
    "scripts": {
        "precommit": "lint-staged",
        "lint:eslint": "eslint . --ignore-path .gitignore",
        "lint:remark": "remark . -i .gitignore -f -q",
        "lint:prettier": "prettier --tab-width 4 --list-different '{lib,__tests__}/**/*.{js,jsx}' '*.{js}'",
        "lint": "npm-run-all -l -p lint:**",
        "prettier": "prettier --tab-width 4 --write '{lib,__tests__}/**/*.{js,jsx}' '*.{js}'",
        "pretest": "npm run lint",
        "test-only": "nyc ava --verbose '**/__tests__/*.js'",
        "test": "npm run test-only",
        "coveralls": "nyc report --reporter=text-lcov | coveralls",
        "release": "npmpub"
    },
    "babel": {
        "presets": [
            "es2015",
            "stage-0"
        ]
    },
    "ava": {
        "require": "babel-register",
        "concurrency": 5,
        "babel": "inherit"
    },
    "remarkConfig": {
        "plugins": [
            "remark-preset-lint-itgalaxy"
        ]
    },
    "eslintConfig": {
        "rules": {
            "strict": "off",
            "sort-keys": "off"
        },
        "extends": [
            "plugin:itgalaxy/ava",
            "plugin:itgalaxy/esnext",
            "plugin:itgalaxy/node"
        ],
        "root": true
    },
    "engines": {
        "node": ">= 4.3 < 5.0.0 || >= 5.10"
    }
}
