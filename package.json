{
  "name": "stylelint-config-itgalaxy",
  "version": "44.0.0",
  "description": "A mostly reasonable approach to CSS and SCSS.",
  "repository": {
    "type": "git",
    "url": "https://github.com/itgalaxy/stylelint-config-itgalaxy.git"
  },
  "homepage": "https://github.com/itgalaxy/stylelint-config-itgalaxy",
  "keywords": [
    "style guide",
    "styleguide",
    "lint",
    "itgalaxy",
    "css",
    "scss",
    "stylelint",
    "stylelint-config"
  ],
  "author": "Itgalaxy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/itgalaxy/stylelint-config-itgalaxy/issues"
  },
  "files": [
    "lib",
    "css.js",
    "index.js",
    "scss.js"
  ],
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.9.0",
    "eslint": "^4.1.1",
    "eslint-plugin-ava": "^4.2.1",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-itgalaxy": "^64.0.0",
    "eslint-plugin-jest": "^21.1.0",
    "eslint-plugin-jsx-a11y": "^6.0.0",
    "eslint-plugin-lodash": "^2.4.3",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.1.0",
    "eslint-plugin-unicorn": "^4.0.2",
    "husky": "^0.14.0",
    "lint-staged": "^6.0.0",
    "npm-run-all": "^4.0.0",
    "npmpub": "^3.1.0",
    "nyc": "^11.1.0",
    "pify": "^3.0.0",
    "prettier": "^1.5.2",
    "remark-cli": "^5.0.0",
    "remark-preset-lint-itgalaxy": "^12.0.0",
    "stylelint": "^9.0.0",
    "stylelint-order": "^0.8.0",
    "stylelint-scss": "^3.0.0"
  },
  "peerDependencies": {
    "stylelint": "^9.0.0",
    "stylelint-scss": "^2.3.0",
    "stylelint-order": "^0.8.0"
  },
  "scripts": {
    "precommit": "lint-staged",
    "lint:prettier": "prettier --list-different '{lib,__tests__}/**/*.{js,mjs,jsx,md}' '*.{js,mjs,jsx,md}'",
    "lint:remark": "remark . -i .gitignore -f -q",
    "lint:eslint": "eslint . '.*.{js,mjs,jsx}' --ignore-path .gitignore --report-unused-disable-directives --ext '.js,.mjs,.jsx'",
    "lint": "npm-run-all -l -p 'lint:**'",
    "fix:prettier": "npm run lint:prettier -- --write",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix": "npm-run-all -l -p 'fix:**'",
    "pretest": "npm run lint",
    "test-only": "nyc ava --verbose '**/__tests__/*.js'",
    "test": "npm run test-only",
    "release": "npmpub"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "ava": {
    "require": "babel-register",
    "concurrency": 5,
    "babel": "inherit"
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-itgalaxy"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "sort-keys": "off"
    },
    "extends": [
      "plugin:itgalaxy/ava",
      "plugin:itgalaxy/esnext",
      "plugin:itgalaxy/node"
    ],
    "overrides": [
      {
        "files": [
          "**/__tests__/**/*.js"
        ],
        "parserOptions": {
          "sourceType": "module"
        },
        "rules": {
          "node/no-unsupported-features": "off"
        }
      }
    ],
    "root": true
  },
  "engines": {
    "node": ">= 6.9.0 || >= 8.9.0"
  }
}
