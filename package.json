{
    "name": "stylelint-config-itgalaxy",
    "version": "8.0.0",
    "description": "A mostly reasonable approach to CSS and SCSS.",
    "repository": {
        "type": "git",
        "url": "https://github.com/itgalaxy/stylelint-config-itgalaxy.git"
    },
    "homepage": "https://github.com/itgalaxy/stylelint-config-itgalaxy",
    "keywords": [
        "style guide",
        "styleguide",
        "lint",
        "itgalaxy",
        "css",
        "scss",
        "stylelint"
    ],
    "author": "Itgalaxy",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/itgalaxy/stylelint-config-itgalaxy/issues"
    },
    "files": [
        "lib",
        "core.js",
        "index.js",
        "scss.js"
    ],
    "dependencies": {
        "merge": "^1.2.0",
        "stylelint-scss": "^1.3.0"
    },
    "devDependencies": {
        "ava": "^0.16.0",
        "babel-cli": "^6.11.0",
        "babel-core": "^6.13.0",
        "babel-preset-es2015": "~6.13.0",
        "babel-preset-stage-0": "~6.5.0",
        "babel-register": "^6.9.0",
        "eslint": "^3.0.0",
        "eslint-plugin-ava": "^3.0.0",
        "eslint-plugin-import": "^1.10.0",
        "eslint-plugin-itgalaxy": "^11.0.0",
        "eslint-plugin-node": "^2.0.0",
        "eslint-plugin-promise": "^2.0.0",
        "eslint-plugin-xo": "^0.5.0",
        "npmpub": "^3.1.0",
        "npm-run-all": "^3.0.0",
        "nyc": "^8.1.0",
        "remark-cli": "^1.0.0",
        "remark-lint": "^4.0.0",
        "remark-lint-config-itgalaxy": "^1.0.0",
        "rimraf": "^2.5.2",
        "stylelint": "^7.1.0"
    },
    "peerDependencies": {
        "stylelint": "^7.0.0",
        "stylelint-scss": "^1.0.0"
    },
    "scripts": {
        "coveralls": "nyc report --reporter=text-lcov | coveralls",

        "lint:eslint": "eslint . --ignore-path .gitignore  --color",
        "lint:remark": "remark '{**/*,*}.md' -r ./node_modules/remark-lint-config-itgalaxy/index.js -i .gitignore -f -q",
        "lint": "npm-run-all -l -p lint:**",

        "ava": "nyc ava --verbose '**/__tests__/*.js'",
        "pretest": "npm run lint",
        "test": "npm run ava",

        "release": "npmpub"
    },
    "babel": {
        "presets": [
            "es2015",
            "stage-0"
        ]
    },
    "ava": {
        "require": "babel-register",
        "concurrency": 5,
        "babel": "inherit"
    },
    "eslintConfig": {
        "rules": {
            "strict": "off",
            "quote-props": "off",

            "import/no-commonjs": "off"
        },
        "extends": [
            "plugin:itgalaxy/ava",
            "plugin:itgalaxy/esnext",
            "plugin:itgalaxy/node"
        ],
        "root": true
    }
}
