{
    "name": "stylelint-config-itgalaxy",
    "version": "33.0.0",
    "description": "A mostly reasonable approach to CSS and SCSS.",
    "repository": {
        "type": "git",
        "url": "https://github.com/itgalaxy/stylelint-config-itgalaxy.git"
    },
    "homepage": "https://github.com/itgalaxy/stylelint-config-itgalaxy",
    "keywords": [
        "style guide",
        "styleguide",
        "lint",
        "itgalaxy",
        "css",
        "scss",
        "stylelint",
        "stylelint-config"
    ],
    "author": "Itgalaxy",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/itgalaxy/stylelint-config-itgalaxy/issues"
    },
    "files": [
        "lib",
        "core.js",
        "index.js",
        "order.js",
        "scss.js"
    ],
    "devDependencies": {
        "ajv-cli": "^2.1.0",
        "ava": "^0.19.0",
        "babel-cli": "^6.11.0",
        "babel-core": "^6.25.0",
        "babel-preset-es2015": "^6.13.0",
        "babel-preset-stage-0": "^6.5.0",
        "babel-register": "^6.9.0",
        "eslint": "^3.17.0",
        "eslint-plugin-ava": "^4.2.0",
        "eslint-plugin-import": "^2.2.0",
        "eslint-plugin-itgalaxy": "^47.0.0",
        "eslint-plugin-jest": "^20.0.3",
        "eslint-plugin-jsx-a11y": "^5.0.1",
        "eslint-plugin-lodash": "^2.3.0",
        "eslint-plugin-node": "^5.0.0",
        "eslint-plugin-prettier": "^2.1.1",
        "eslint-plugin-promise": "^3.5.0",
        "eslint-plugin-react": "^7.0.0",
        "eslint-plugin-unicorn": "^2.0.0",
        "husky": "^0.13.0",
        "lint-staged": "^4.0.0",
        "npm-run-all": "^4.0.0",
        "npmpub": "^3.1.0",
        "nyc": "^11.0.1",
        "package-schema": "^1.0.0",
        "prettier": "^1.4.4",
        "remark-cli": "^3.0.0",
        "remark-preset-lint-itgalaxy": "^6.0.0",
        "rimraf": "^2.5.2",
        "stylelint": "^7.11.0",
        "stylelint-order": "^0.5.0",
        "stylelint-scss": "^1.4.1"
    },
    "peerDependencies": {
        "stylelint": "^7.11.0",
        "stylelint-scss": "^1.4.1",
        "stylelint-order": "^0.5.0"
    },
    "scripts": {
        "precommit": "lint-staged",
        "lint:eslint": "eslint . --ignore-path .gitignore",
        "lint:package": "ajv -s ./node_modules/package-schema/schema.json -d package --errors=text",
        "lint:remark": "remark . -i .gitignore -f -q",
        "lint": "npm-run-all -l -p lint:**",
        "formatter:prettier": "eslint . --fix --ignore-path .gitignore",
        "formatter": "npm-run-all -l -p formatter:**",
        "ava": "nyc ava --verbose '**/__tests__/*.js'",
        "pretest": "npm run lint",
        "test": "npm run ava",
        "coveralls": "nyc report --reporter=text-lcov | coveralls",
        "release": "npmpub"
    },
    "babel": {
        "presets": [
            "es2015",
            "stage-0"
        ]
    },
    "ava": {
        "require": "babel-register",
        "concurrency": 5,
        "babel": "inherit"
    },
    "remarkConfig": {
        "plugins": [
            "remark-preset-lint-itgalaxy"
        ]
    },
    "eslintConfig": {
        "rules": {
            "strict": "off",
            "quote-props": "off",
            "sort-keys": "off",
            "import/no-commonjs": "off"
        },
        "extends": [
            "plugin:itgalaxy/ava",
            "plugin:itgalaxy/esnext",
            "plugin:itgalaxy/node",
            "plugin:itgalaxy/prettier"
        ],
        "root": true
    },
    "engines": {
        "node": ">= 4.3 < 5.0.0 || >= 5.10"
    }
}
